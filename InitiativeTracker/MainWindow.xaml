<Window x:Class="InitiativeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitiativeTracker"
        mc:Ignorable="d"
        Title="Initiative Tracker" Height="450" Width="800">
    <Window.DataContext>
        <Binding Source="local:InitiativeTrackerViewModel"/>
    </Window.DataContext>
    <Grid Background="{StaticResource NegativeSpace}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>  <!-- Play Character list -->
            <ColumnDefinition Width="2*"/> <!-- Initiative Tracker -->
            <ColumnDefinition Width="*"/>  <!-- Enemy List -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Open Encounter"/>
                <MenuItem Header="Save Encounter"/>
                <MenuItem Header="Save Encounter As"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="I Believe In You"/>
            </MenuItem>
        </Menu>
        <Label Grid.Row="1" Grid.Column="0"
               Content="Playable Characters" FontWeight="Bold"
               HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
               Background="{StaticResource TitleBackground}"  Foreground="{StaticResource TitleText}"/>

        <Label Grid.Row="1" Grid.Column="1"
               Content="Combat Tracker" FontWeight="Bold"
               HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
               Background="{StaticResource TitleBackground}"  Foreground="{StaticResource TitleText}"/>

        <Label Grid.Row="1" Grid.Column="2"
               Content="Enemies" FontWeight="Bold"
               HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
               Background="{StaticResource TitleBackground}"  Foreground="{StaticResource TitleText}"/>

        <Button Grid.Row="2" Grid.Column="0" Click="BtnAddCharacter_Click">Add Character</Button>
        <Button Grid.Row="2" Grid.Column="1">Start Combat</Button>
        <Grid Grid.Row="2" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0">Add Enemy</Button>
            <Button Grid.Column="1">Roll Initiative</Button>
        </Grid>
        
        <ListBox Grid.Row="3" Grid.Column="0" Background="{StaticResource NegativeSpace}"
                 ItemsSource="{Binding PlayableCharacters}" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:CharacterBox MouseDown="CharacterBoxPC_MouseDown"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Grid.Row="3" Grid.Column="2" Background="{StaticResource NegativeSpace}"
                 ItemsSource="{Binding EnemyCharacters}" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:CharacterBox/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
